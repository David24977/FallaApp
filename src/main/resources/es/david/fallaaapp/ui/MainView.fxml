<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.4" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.david.fallaapp.ui.MainController">
    <top>
        <ToolBar>
            <Label text="Falleros" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            <Separator orientation="VERTICAL"/>
            <Button text="Insertar fallero" onAction="#onInsert"/>
            <Button text="Eliminar seleccionado" onAction="#onDeleteSelected"/>
            <Separator orientation="VERTICAL"/>
            <Button text="Recargar" onAction="#onReload"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Listo"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                <TableColumn fx:id="colDni" text="DNI" prefWidth="120"/>
                <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="220"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="140"/>
                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
